{% extends 'Frontend/base.html.twig' %}

{% block title %}<title>Cours index</title>{% endblock %}

{% block content %}
    <h1>Cours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomCompletCours</th>
                <th>NomAbergeCours</th>
                <th>DateDebutCours</th>
                <th>DateFinCours</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.NomCompletCours }}</td>
                <td>{{ cour.NomAbergeCours }}</td>
                <td>{{ cour.DateDebutCours ? cour.DateDebutCours|date('Y-m-d') : '' }}</td>
                <td>{{ cour.DateFinCours ? cour.DateFinCours|date('Y-m-d') : '' }}</td>
                <td>{{ cour.Categorie }}</td>
                <td>
                    <a href="{{ path('cours_show', {'id': cour.id}) }}">show</a>
                    <a href="{{ path('cours_edit', {'id': cour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cours_new') }}">Create new</a>
{% endblock %}
