{% extends 'Backend/base.html.twig' %}


{% block title %} Gestion des évènements{% endblock %}

{% block content %}

    <h1>Event index</h1>
<div class="card-body">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.nom }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                <td>{{ event.lieu }}</td>
                <td>
                    <a style="color: black" href="{{ path('event_show_admin', {'id': event.id}) }}">show</a>
                    <a style="color: black" href="{{ path('event_edit_admin', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
<form action="{{ path('event_new_admin') }}">
    <button class="btn submit">Create new</button>
</form>

    <form role="search" id="nav-search-form" method="post" action="{{ path('recherche') }}">

        <input type="text" class="form-control round" id="search"  name="search" placeholder="Search">
        <br>
        <button type="submit" > Search </button>

    </form>



    <form role="search" id="nav-search-form" method="post" action="{{ path('sort') }}">


        <div class="btn-toolbar" role="toolbar" aria-label="Programmatic control">
            <div class="btn-group btn-group-sm" aria-label="Set Select2 option">
                <button class="js-programmatic-set-val btn btn-outline-primary mr-1 mb-1">
                    Sort by Name
                </button>
            </div>
        </div>

    </form>
{% endblock %}
