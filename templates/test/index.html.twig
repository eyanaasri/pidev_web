{% extends 'Frontend/base.html.twig' %}

{% block title %}<title>Test index</title>{% endblock %}

{% block content %}
    <h1>Test index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question1</th>
                <th>Reponse1</th>
                <th>Question2</th>
                <th>Reponse2</th>
                <th>Question3</th>
                <th>Reponse3</th>
                <th>Question4</th>
                <th>Reponse4</th>
                <th>Question5</th>
                <th>Reponse5</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.Question1 }}</td>
                <td>{{ test.Reponse1 }}</td>
                <td>{{ test.Question2 }}</td>
                <td>{{ test.Reponse2 }}</td>
                <td>{{ test.Question3 }}</td>
                <td>{{ test.Reponse3 }}</td>
                <td>{{ test.Question4 }}</td>
                <td>{{ test.Reponse4 }}</td>
                <td>{{ test.Question5 }}</td>
                <td>{{ test.Reponse5 }}</td>
                <td>
                    <a href="{{ path('test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('test_new') }}">Create new</a>
{% endblock %}
